<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylight"
    android:orientation="vertical"
    tools:context=".ProfilActivity">

    <!--  Navigasi   -->
    <LinearLayout
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_gravity="center"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/bg_trash3"
            android:layout_width="match_parent"
            android:layout_height="270dp">
        </LinearLayout>

        <!--   CARDS     -->
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp">
            <!--   Membagi Vertical atas dan bawah -->
            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--   Membuat Horizontal -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--   Card Bagian Kiri atas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Riwayat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <!--   Garis  -->
                <View
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#45D1D1D1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <!--   Garis  -->

                <!--   Membuat Horizontal  -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <!--   Card Bagian bawah -->
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_jadwal_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:paddingLeft="2dp"
                        android:textColor="#000"
                        android:text="Riwayat Penjemputan 1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!--   Membuat Horizontal  -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <!--   Card Bagian bawah -->
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_jadwal_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:paddingLeft="2dp"
                        android:textColor="#000"
                        android:text="Riwayat Penjemputan 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!--   Membuat Horizontal  -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <!--   Card Bagian bawah -->
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/ic_jadwal_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:paddingLeft="2dp"
                        android:textColor="#000"
                        android:text="Riwayat Penjemputan 3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>