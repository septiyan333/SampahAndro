<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".TukarpoinActivity">

    <!--  Navigasi   -->
    <LinearLayout
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_gravity="center"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp">
        <LinearLayout
            android:background="@drawable/bg_trash"
            android:layout_width="match_parent"
            android:layout_height="270dp">
            <LinearLayout
                android:background="@drawable/gradientbackground"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

        <!--   CARDS     -->
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp">
            <!--   Membagi Vertical atas dan bawah -->
            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--   Card Bagian Atas  -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <!--   Membuat Horizontal -->
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--   Card Bagian Kiri atas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:layout_marginTop="14dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="15dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:text="Poin Saya"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <!--   Card Bagian Kanan atas -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginTop="14dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="15dp"
                                android:textAlignment="textEnd"
                                android:textColor="#FFE500"
                                android:textSize="20sp"
                                android:text="0 TP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--   Garis  -->
                <View
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#45D1D1D1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <!--   Garis  -->

                <!--   Card Bagian Bawah  -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <!--   Membuat Horizontal  -->
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--   Card Bagian Kiri bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                        </LinearLayout>
                        <!--   Card Bagian Kanan bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:textAlignment="textEnd"
                                android:layout_marginRight="15dp"
                                android:textColor="#000"
                                android:text="Lihat Riwayat Poin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlCompat" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--   Card Bagian Kiri atas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="38dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Nomor HP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/background_form"
                    android:text=""
                    android:padding="10dp"
                    android:textColorHint="#969696"
                    android:textSize="22sp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <!--   Card Bagian bawah -->
                    <ImageView
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_phone_black_24dp"
                        android:layout_width="50dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Harga 15.000 TP"/>
                <Button
                    android:textAllCaps="false"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="15 rb"
                    android:background="#FFFFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Harga 20.000 TP"/>
                <Button
                    android:textAllCaps="false"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="20 rb"
                    android:background="#FFFFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Harga 30.000 TP"/>
                <Button
                    android:textAllCaps="false"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="30rb"
                    android:background="#FFFFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>