<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".PenjemputanActivity">

    <!--  Navigasi   -->
    <LinearLayout
        android:background="#FFFFFF"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:layout_gravity="center"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/graylight"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <!--   Card-->
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_home_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:background="@drawable/background_form"
                    android:hint="Alamat"
                    android:padding="10dp"
                    android:textColorHint="#969696"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:background="@color/graylight"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <!--   Card Bagian Kiri atas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:text="Jenis Sampah"
                android:textColor="#000"
                android:textSize="25sp"/>
        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/graylight">
        <!--   CARDS     -->
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">
            <!--   Membagi Vertical atas dan bawah -->
            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <!--   Card Bagian Atas  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="0">
                    <!--   Membuat Horizontal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <!--   Card Bagian Kiri atas -->
                        <LinearLayout
                            android:layout_width="33dp"
                            android:layout_height="50dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginBottom="10dp"
                                android:text="Organik"
                                android:textColor="#000"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <!--   Card Bagian Kanan atas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginBottom="10dp"
                                android:text="Non Organik"
                                android:textColor="#000"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--   Garis  -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#45D1D1D1"/>
                <!--   Garis  -->

                <!--   Card Bagian Bawah  -->
                <LinearLayout
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <!--   Membuat Horizontal  -->
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--   Card Bagian Kiri bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <CheckBox
                                android:id="@+id/checkBox1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>
                            <TextView
                                android:id="@+id/code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/checkBox1"
                                android:layout_alignBottom="@+id/checkBox1"
                                android:layout_toRightOf="@+id/checkBox1"
                                android:text="Minyak"
                                android:textColor="#454545"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <!--   Card Bagian Kanan bawah -->

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <CheckBox
                                android:id="@+id/checkBox3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>
                            <TextView
                                android:id="@+id/code3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/checkBox2"
                                android:layout_alignBottom="@+id/checkBox2"
                                android:layout_toRightOf="@+id/checkBox2"
                                android:text="Plastik"
                                android:textStyle="bold"
                                android:textColor="#454545" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--       Baris 2         -->
                <LinearLayout
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <!--   Membuat Horizontal  -->
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--   Card Bagian Kiri bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <CheckBox
                                android:id="@+id/checkBox2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>

                            <TextView
                                android:id="@+id/code2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/checkBox1"
                                android:layout_alignBottom="@+id/checkBox1"
                                android:layout_toyRightOf="@+id/checkBox1"
                                android:text="Buah Sayur"
                                android:textColor="#454545"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <!--   Card Bagian Kanan bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <CheckBox
                                android:id="@+id/checkBox4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>
                            <TextView
                                android:id="@+id/code4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/checkBox2"
                                android:layout_alignBottom="@+id/checkBox2"
                                android:layout_toRightOf="@+id/checkBox2"
                                android:text="Kertas"
                                android:textStyle="bold"
                                android:textColor="#454545" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--       Baris 2         -->

                <!--       Baris 3         -->
                <LinearLayout
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <!--   Membuat Horizontal  -->
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--   Card Bagian Kiri bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </LinearLayout>
                        <!--   Card Bagian Kanan bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <CheckBox
                                android:id="@+id/checkBox5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>
                            <TextView
                                android:id="@+id/code5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/checkBox2"
                                android:layout_alignBottom="@+id/checkBox2"
                                android:layout_toRightOf="@+id/checkBox2"
                                android:text="Kardus"
                                android:textStyle="bold"
                                android:textColor="#454545" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--       Baris 3         -->

                <!--       Baris 4         -->
                <LinearLayout
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <!--   Membuat Horizontal  -->
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--   Card Bagian Kiri bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </LinearLayout>
                        <!--   Card Bagian Kanan bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <CheckBox
                                android:id="@+id/checkBox6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>
                            <TextView
                                android:id="@+id/code6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/checkBox2"
                                android:layout_alignBottom="@+id/checkBox2"
                                android:layout_toRightOf="@+id/checkBox2"
                                android:text="Kaleng"
                                android:textStyle="bold"
                                android:textColor="#454545" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--       Baris 4         -->

                <!--       Baris 5         -->
                <LinearLayout
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <!--   Membuat Horizontal  -->
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--   Card Bagian Kiri bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </LinearLayout>
                        <!--   Card Bagian Kanan bawah -->
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <CheckBox
                                android:id="@+id/checkBox7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"/>
                            <TextView
                                android:id="@+id/code7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/checkBox2"
                                android:layout_alignBottom="@+id/checkBox2"
                                android:layout_toRightOf="@+id/checkBox2"
                                android:text="Kain"
                                android:textStyle="bold"
                                android:textColor="#454545" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--       Baris 5         -->


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/graylight"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <!--   Card Bagian Kiri atas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="Jadwal Penjemputan"
            android:textColor="#000"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <!--   Card-->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_jadwal_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="@drawable/background_form"
                android:hint="Tanggal"
                android:padding="10dp"
                android:textColorHint="#969696"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <!--   Card-->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_access_time_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="@drawable/background_form"
                android:hint="Waktu"
                android:padding="10dp"
                android:textColorHint="#969696"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/graylight"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
        <Button
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Selesai"
            android:background="@drawable/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>
