<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context=".SampahAnorganik">

    <RelativeLayout
        android:id="@+id/sampahanorganik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <!--Navigasi-->
            <Button
                android:layout_width="22dp"
                android:layout_height="19dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_arrow_back_black_24dp" />

            <!--Image View-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/hitrash_edukasi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sampah Anorganik"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal" />

            <!--Garis Horizontal-->
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="10dp"
                android:background="#DCDCDC"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <!--Scroll layout-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sampahanorganik">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <!--Image Button Limbah-->
            <ImageButton
                android:id="@+id/imgbtnplastik"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:elevation="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/limbah_plastik" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limbah Plastik"
                android:textAlignment="center"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/imgbtnkaleng"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:elevation="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/limbah_kaleng" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limbah Kaleng"
                android:textAlignment="center"
                android:textColor="#000000" />

            <ImageButton
                android:id="@+id/imgbtnkain"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:elevation="1dp"
                android:scaleType="centerCrop"
                android:src="@drawable/limbah_kain" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Limbah Kain"
                android:textAlignment="center"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>